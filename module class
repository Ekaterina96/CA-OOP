
/**
 * Write a description of class Module here.
 * 
 * @author (your name) 
 * @version (a version number or a date)
 */
public class Module extends Staff {
    private Object[] module;
    int code;
    String name = null;
    int numberOfCredits;
    
    
    public Module(){
        this.module = new Object[0]; 
    }
    
    public Module(int code, String name, int numberOfCredits) {
        this.code = code;
        this.name = name;
        this.numberOfCredits = numberOfCredits;
        
    }
    
    public void add(Object list){
        Object[] record = new Object[this.module.length+1];
        for(int h=0; h<this.module.length; h++){
            record[h] = this.module;
            record[this.module.length] = list;
            this.module = record;
            for (Object member : this.list) {
                if (member.equals(list)){
                 break;
                }
            }
           
        }
    }
                
    
    
    
    
} 
 
   
